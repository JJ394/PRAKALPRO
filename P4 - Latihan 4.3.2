try:
    pembelian = int(input("Masukkan nominal pembelian anda: "))

    if pembelian > 1000000:
        diskon = 0.3
    elif pembelian > 500000 and pembelian <= 1000000:
        diskon = 0.2
    elif pembelian >= 100000 and pembelian <= 500000:
        diskon = 0.15
    else:
        diskon = 0
    harga = pembelian - (pembelian * diskon)
    print(f"Total anda adalah {harga}")
except:
    print("Maaf, data yang anda masukkan tidak valid...")
